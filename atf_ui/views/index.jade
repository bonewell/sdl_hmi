extends layout

block content

    form(action='/login',method='post')

        .input-group
            .input-group-btn
                button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    | User name
                    span.caret
                ul.dropdown-menu
                    each user, i in users
                        li
                            a(href='/chosen/#{user.userName}') #{user.userName}

            input.form-control(type='text', aria-label='...')

        .input-group.input-group-lg
            span.input-group-addon User password
            input.form-control(name='password', value='', type="password", placeholder="password", aria-describedby="sizing-addon1")

        p
            input.btn.btn-success(type='submit', value="Enter")

        p
            a(id='test_suite', class='btn btn-info', href='/register') Register new user

    if session.user

        p Hi #{session.user.userName}

        p
            a(id='config', class='button', href='/config') go to config
        p
            a(id='test_suite', class='button', href='/test_suite') go to test_suite