extends layout

block content
    #test_suite_configuration_container(class='main_container')
        div(class="functional_block")
            div(class="innerContainer")
                p(class="header") Upload test cases
                form(action="/upload", method="post", enctype="multipart/form-data", class="uploadForm")
                    span.btn.btn-default.btn-file Search
                        input(type="file", name="file_upload", multiple)
                    p Additional test-data upload (icons, etc)
                    span.btn.btn-default.btn-file Search
                        input.btn.btn-default(type="file", name="icon_file_upload", multiple)
                    input.btn.btn-default(type='submit', name="upload", value="upload")

                #test_suite_add.btn.btn-default Add test suite

        div(class="functional_block right")
            div(class="innerContainer")
                label(class='label') Select test suits to run
                div(id='list_of_suits', class="container")

                div(class="button_container")
                    #start_atf.btn.btn-default(type="button") Start ATF
                    #stop_atf.btn.btn-default(type="button", disabled="disabled") Stop ATF
                    #clean_sdl.btn.btn-default(type="button", disabled="disabled") Stop SDL

                #test_suite_list_area.container
                    p Test suite list
                    select(id='test_suite_list', class='test_suite_list')

                    #update_list.btn.btn-default(class='update_list') Update

                    textarea(id='description', class='description', rows=7, cols=1, readonly='readonly')

        div(class="functional_block left bottom ")
            div(class="innerContainer")

        label(class='label') ATF Log
        textarea(id='atf_log', class='ATF_log', rows=7, cols=1, readonly='readonly')

        label(class='label') SDL Log
        textarea(id='sdl_log', class='SDL_log', rows=7, cols=1, readonly='readonly')

    a.btn.btn-default(href='http://localhost:3000') Back
    #colorScheme.btn.btn-default Change Color

    #footer
        div(class='footer-box') SDL file name:
            p(class='footer_param') #{session.user.config[configIndex].file_path}
        div(class='footer-box') heartBeat timeout:
            p(class='footer_param') #{session.user.config[configIndex].hb_timeout}
        div(class='footer-box') testRecord folder:
            p(class='footer_param') #{session.user.config[configIndex].testRecord_path}
        div(class='footer-box') Mobile connection string:
            p(class='footer_param') #{session.user.config[configIndex].MOB_connection_str}
        div(class='footer-box') HMI connection string:
            p(class='footer_param') #{session.user.config[configIndex].HMI_connection_str}
        div(class='footer-box') PerfLog connection string:
            p(class='footer_param') #{session.user.config[configIndex].PerfLog_connection_str}
        div(class='footer-box') Client PerfLog connection string:
            p(class='footer_param') #{session.user.config[configIndex].client_PerfLog_connection_str}
        div(class='footer-box') Time for launch SDLProc:
            p(class='footer_param') #{session.user.config[configIndex].launch_time}
        div(class='footer-box') terminal CMD:
            p(class='footer_param') #{session.user.config[configIndex].terminal_name}

