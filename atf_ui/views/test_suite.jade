extends layout

block content

    include ./modals/notify

    #test_suite_configuration_container
        .row
            .col-xs-6
                .thumbnail
                    p Select test suit
                        form(action="/addTestSuit", method="post")
                            .input-group
                                .input-group-btn
                                    button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                        | Test Suit
                                        span.caret
                                    ul.dropdown-menu
                                        each suit in suits
                                            li
                                                a.testSuitListItem(name="#{suit.testSuite}") #{suit.testSuite}
                                input.form-control(id='testSuitInput', name='testSuit' ,type='text', aria-label='...')
                                span.input-group-btn
                                    button#addNewTestSuit.btn.btn-primary(type='submit') Add New

            .col-xs-6
                .thumbnail
                    p Load script
                    form(action="/upload", method="post", enctype="multipart/form-data", class="uploadForm")
                        .list-group
                            span.btn.btn-primary.btn-file Add *.lua scripts
                                input.btn.btn-default(type="file", name="file_upload", multiple, accept="lua")
                                span.badge 4
                        .list-group
                            span.btn.btn-primary.btn-file Browse additional test-data upload (icons, etc)
                                input.btn.btn-default(type="file", name="icon_file_upload", multiple)
                                span.badge 4
                        input#updateTest.btn.btn-success.disabled(type='submit', name="upload", value="Update test suite")
                        span#testSuiteSelectLabel.label.label-info Choose test suite first

