extends layout

block content
    ul(class="nav nav-tabs")
        each config, i in session.config
            li(role="presentation", class="active")
                a(href="#") Config#{i+1}

        -if (session.userName != "defaultUser")
            li(role="presentation")
                a(href="/addConfig") +

    -if (status == "register")
        -var reg = true

    #main_configuration_container(class='main_container')
        form(action='/save',method='post')

            -if (reg && configIndex == 0)
                p User name
                .input-group(id="userName")
                    input(name='userName', class="form-control", placeholder="User name")
                    .input-group-addon
                        span.text status
                        .glyphicon.glyphicon-refresh.hidden

                p User email
                .input-group
                    input(name='email', class="form-control", placeholder="User email")

                p User password
                .input-group
                    input(name='password', class="form-control", type="password", placeholder="User password")

            p heartBeat timeout
            .input-group
                input(name='hb_timeout', class="form-control", value='#{session.config[configIndex].hb_timeout}')

            p testRecord folder
            .input-group
                input(name='testRecord_path', class="form-control", value='#{session.config[configIndex].testRecord_path}')

            p Mobile connection string
            .input-group
                input(name='MOB_connection_str', class="form-control", value='#{session.config[configIndex].MOB_connection_str}')

            p HMI connection string
            .input-group
                input(name='HMI_connection_str', class="form-control", value='#{session.config[configIndex].HMI_connection_str}')

            p PerfLog connection string
            .input-group
                input(name='PerfLog_connection_str', class="form-control", value='#{session.config[configIndex].PerfLog_connection_str}')

            p Time for launch SDLProc
            .input-group
                input(name='launch_time', class="form-control", value='#{session.config[configIndex].launch_time}')

            p Client PerfLog connection string
            .input-group
                input(name='client_PerfLog_connection_str', class="form-control", value='#{session.config[configIndex].client_PerfLog_connection_str}')

            p terminal CMD
            .input-group
                input(name='terminal_name', class="form-control", value='#{session.config[configIndex].terminal_name}')

            p SDLStoragePath
            .input-group
                input(name="SDLStoragePath", class="form-control", value='#{session.config[configIndex].SDLStoragePath}')

            p
            input.btn.btn-success(type='submit')
            input.btn.btn-warning(type='reset')

    a(class='btn btn-default', href='http://localhost:3000') Back
